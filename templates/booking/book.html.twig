{% extends 'base.html.twig' %}

{% block title %}Réserver l'annonce {{ad.title}}!{% endblock %}

{% block body %}
<div class="container">
    <h1>Réserver pour l'annonce{{ ad.title }}</h1>
    <p>Vous êtes sur le point de reserver le bien de <strong>{{ ad.autor.fullName }}</strong>,dites nous tous on s'occupe du reste!</p>
    {{ form_start(form) }}
    <div class="alert-alert-light">
        <h2>commencer par nous dire quelle sont les dates qui vous interèsse !</h2>
        <div class="row">
            <div class="col">
                {{form_row(form.startDate)}}
            </div>
            <div class="col">
                {{form_row(form.endDate)}}
            </div>
        </div>
        <h4>Montant du séjour:<span id="amount"></span>&euro;</h4>
        <span id="days">0</span> nuit(s) à {{ ad.price}} /nuit
    </div>
    <button type="submit" class="btn btn-success">Réserver</button>
    {{ form_end(form) }}

</div>
{% endblock %}
