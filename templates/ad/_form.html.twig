
{# il faut examiner l'element pour voir le nom du champ dans le formulaire ici c'est _annonce_images#}
{% block _annonce_images_widget %}
  <p>ici vous pouvez ajouter vos propres images</p>
  {{form_widget(form)}}
  <input type="hidden" id="widget-counter" value="0">
  <div class="form-group">
      {# on met le type a button sinon il va soumettre quand on clique de√ßu#}
      <button type="button" id="ad-image"class="btn btn-primary">
        Ajouter une image
      </button>
  </div>
{% endblock %}
{# ici on ajouter la ligne et les deux colonnes #}
{% block _annonce_images_entry_widget %}
   <div class="form-group" id="block_{{id}}">
       <div class="row">
           <div class="col-10">
                <div class="row">
                    <div class="col">
                        {{ form_widget(form.url_image)}}
                        {{ form_errors(form.url_image)}}
                    </div>
                    <div class="col">
                       {{ form_widget(form.caption) }}
                       {# pour gerer les erreur sur la validation des images  avec @Assert #}
                       {{ form_errors(form.caption) }}
                    </div>
                </div>
            </div>
            {# pour le button supprimer #}
            <div class="col-2">
                <button type="button" class="btn btn-danger" data-action="delete" data-target="#block_{{id}}">
                    X
                </button>
            </div>
       </div>
   </div>
{% endblock %}
