{% extends 'base.html.twig' %}

{% block title %}Nos magnifique images!{% endblock %}
{# Thierno1994kkl# #}
{% block body %}
<div class="container">
    <h1 class="my-3">Voici les annonces de nos hôtes</h1>
    <div class="row">
        {% for ad in ads %}
                {% set url = path('ads_show',{'slug': ad.slug }) %}
                <div class="col-md-4">
                    <div class="card bg-light mb-3">
                       <div class="card-header  text-center">
                           {{ ad.rooms }} chambres,<strong>{{ad.price}}&euro; /nuit </strong>
                           <small>pas encore noté</small>
                        </div>
                    <a href="{{url}}">
                        <img src="{{ ad.coverImage }}" alt="image de l'appartement" style="height: 200px; width: 100%; display: block" >
                     </a> 
                    </div>
                     <div class="card-body">
                         <a href="{{url}}">
                            <h4 class="card-title"> {{ ad.title }} !</h4>
                        </a>
                        <a href="{{url}}">
                         <p class="card-text">{{ ad.introduction }}</p>
                       </a>
                        
                        <a href="{{url}}" class="btn btn-secondary">En savoir plus</a>
                     </div>
               </div>
        {% endfor %}
    </div>
</div>

{% endblock %}
